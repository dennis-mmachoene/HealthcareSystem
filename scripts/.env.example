# Environment configuration for Smart Healthcare Management System
# Copy this file to .env and update with your local settings

# Java Configuration
JAVA_HOME=/usr/lib/jvm/java-17-openjdk
PATH=$JAVA_HOME/bin:$PATH

# Apache Ant
ANT_HOME=/usr/share/ant

# GlassFish Configuration
GLASSFISH_HOME=/opt/glassfish7
GLASSFISH_DOMAIN=domain1
GLASSFISH_PORT=8080
GLASSFISH_ADMIN_PORT=4848
GLASSFISH_ADMIN_USER=admin
GLASSFISH_ADMIN_PASSWORD=admin

# Apache Derby Configuration
DERBY_HOME=/opt/derby
DB_HOST=localhost
DB_PORT=1527
DB_NAME=healthcaredb
DB_USER=app
DB_PASSWORD=app

# Application Configuration
APP_CONTEXT_ROOT=healthcare
APP_VERSION=1.0.0

# Development Options
ENABLE_DEBUG=true
LOG_LEVEL=INFO

# Email Configuration (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@healthcare.com

# Security
JWT_SECRET=your-secret-key-change-this-in-production
SESSION_TIMEOUT=30

# Docker Configuration (if using Docker)
DOCKER_REGISTRY=localhost:5000
DOCKER_IMAGE_TAG=latest